{
	"name": "cust_trans_lookup",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_datalakegen2_mydata_cust",
						"type": "DatasetReference"
					},
					"name": "cust"
				},
				{
					"dataset": {
						"referenceName": "ds_datalakegen2_mydata_cust_transa",
						"type": "DatasetReference"
					},
					"name": "custtrans"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_ls_datalakegen2_urdata",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "last"
				},
				{
					"name": "first"
				},
				{
					"name": "firstselect"
				},
				{
					"name": "lastselect"
				},
				{
					"name": "union1"
				},
				{
					"name": "filter1"
				},
				{
					"name": "sort1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          cid as string,",
				"          name as string,",
				"          phone as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> cust",
				"source(output(",
				"          trid as string,",
				"          cid as string,",
				"          pid as string,",
				"          amount as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> custtrans",
				"cust, custtrans lookup(cust@cid == custtrans@cid,",
				"     multiple: false,",
				"     pickup: 'last',",
				"     asc(trid, true),",
				"     broadcast: 'auto')~> last",
				"cust, custtrans lookup(cust@cid == custtrans@cid,",
				"     multiple: false,",
				"     pickup: 'first',",
				"     asc(trid, true),",
				"     broadcast: 'auto')~> first",
				"first select(mapColumn(",
				"          cid = cust@cid,",
				"          name,",
				"          trid,",
				"          pid,",
				"          amount",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> firstselect",
				"last select(mapColumn(",
				"          cid = cust@cid,",
				"          name,",
				"          trid,",
				"          pid,",
				"          amount",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> lastselect",
				"lastselect, firstselect union(byName: true)~> union1",
				"union1 filter(!isNull(trid)) ~> filter1",
				"filter1 sort(asc(cid, true)) ~> sort1",
				"sort1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['custfirstlasttrans.txt'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}